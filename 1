    <!--👇🏻 All your JavaScript code goes below here inside this script tag 👇🏻 -->
    <script id="candidateCode">
      function startUp() {
        wireUpHandler();
      }

      wireUpHandler = () => {
        $("#submitButton").on("click", onSubmitButtonClick);
        $("#renderAllButton").on("click", onRenderAllButtonClick);
        $(".clone-container").on("click", ".deleteButton", onDeleteButtonClick);
        $(".clone-container").on("click", ".editButton", onEditButtonClick);
        $("#updateButton").on("click", onUpdateButtonClicked); // clickhandler for the updateButton
      };

      onSubmitButtonClick = (e) => {
        e.preventDefault(); //remove submit button type default behavior
        var userFormInput = getFormData(); //capture user input from forms
        entitiesService.add(userFormInput).then(onEntitiesAddSuccess); //add user input from forms to the server
      };

      onEntitiesAddSuccess = (response) => {
        var clonned = getTemplate(); //capture hidden template from script tag
        clonned.find(".card-title").text(`${response.pluginName}`); //change template card's title to user input object property value
        clonned.find(".card-text").text(`${response.companyName}`); //change template card's title to user input object property value
        clonned.find(".card-text-year").text(`${response.yearReleased}`); //change template card's title to user input object property value
        clonned.find(".card-id").attr("id", `${response.id}`); //change template card's title to user input object property value

        $(".clone-container").append(clonned); //add changed template to the DOM

        emptyForms(); //resets form values
      };

      onRenderAllButtonClick = (e) => {
        // console.log("renderAll button clicked");
        e.preventDefault; // prevent submit button type default behavior
        var allEntities = entitiesService // ajax call to get all entities
          .getAll()
          .then(onEntitiesServiceGetAllSuccess)
          .catch(onEntitiesServiceGetAllError);
      };

      onEntitiesServiceGetAllSuccess = (response) => {
        //success handler
        var arrayOfAudioPlugins = response.data.items; //successful response of the ajax call ; captures value of array
        for (let i = 0; i < arrayOfAudioPlugins.length; i++) {
          //loop through array
          const currentPlugin = arrayOfAudioPlugins[i]; //get current index value for looping array

          var clonned = getTemplate(); //capture hidden template stored in script tag
          clonned.find(".card-title").text(`${currentPlugin.pluginName}`); //change template card's title to object property from index of looping array
          clonned.find(".card-text").text(`${currentPlugin.companyName}`); //change template card's title to object property from index of looping array
          clonned.find(".card-text-year").text(`${currentPlugin.yearReleased}`); //change template card's title to object property from index of looping array
          // clonned.find(".card-id").html(`${currentPlugin.id}`); //change template card's title to object property from index of looping array
          clonned.find(".card-id").attr("id", `${currentPlugin.id}`); //change template card's title to object property from index of looping array
          $(".clone-container").append(clonned); //appends changed template to DOM
        }
      };

      onEntitiesServiceGetAllError = (response) => {
        console.log(response.error);
      };

      onUpdateButtonClicked = (e) => {
        e.preventDefault(); // prevents default submit button type behavior

        let btn = e.currentTarget; //find the target for the button

        var updatedUserFormInput = getFormData(); //grabs current information in form

        var grabId = getIdFromDOM(); // //takes hidden Id from card editted

        var updateToServer = entitiesService.update(
          grabId,
          updatedUserFormInput
        ); //update to server

        var idToQjuerySelector = "#" + grabId;

        $(idToQjuerySelector)
          .find(".card-title")
          .text(`${updatedUserFormInput.pluginName}`); //change template card's title to user input object property value
        $(idToQjuerySelector)
          .find(".card-text")
          .text(`${updatedUserFormInput.companyName}`); //change template card's title to user input object property value
        $(idToQjuerySelector)
          .find(".card-text-year")
          .text(`${updatedUserFormInput.yearReleased}`); //change template card's title to user input object property value

        showSubmitButton();

        hideUpdateButton();
      };

      onDeleteButtonClick = (e) => {
        let btn = e.currentTarget; //find the target for the button

        var id = $(btn) //take the id from the cardbody text
          .closest(".card")
          .find(".card-id")
          .attr("id");

        var deleteFromServer = entitiesService.deleteById(id); // delete from server
        console.log(deleteFromServer);
        btn.closest(".row").remove(); //remove from DOM

        emptyForms();
      };

      onEditButtonClick = (e) => {
        e.preventDefault();

        let btn = e.currentTarget; //find the target for the button

        var cardData = {}; //create empty object for data

        cardData.pluginName = $(btn) //take the text from the card title and assign it to the objects property
          .closest(".card")
          .find(".card-title")
          .text();
        cardData.companyName = $(btn) //take the text from the cardbody text and assign it to the objects property
          .closest(".card")
          .find(".card-text")
          .text();

        cardData.yearReleased = $(btn) //take the text from the cardbody text and assign it to the objects property
          .closest(".card")
          .find(".card-text-year")
          .text();
        cardData.id = $(btn) //take the id from the cardbody text and assign it to the objects property
          .closest(".card")
          .find(".card-id")
          .attr("id");

        writeFormData(cardData); // populate the cardData to the forms on the DOM; capture the value

        hideSubmitButton(); //adds class d-none to hide submit button

        showUpdateButton(); //removes class d-none to show updatebutton

        moveIdToDOM(cardData.id); //adds Id from card via edit button to hide in DOM
      };

      hideSubmitButton = () => {
        $("#submitButton") //hides submit button from DOM
          .addClass("d-none");
      };

      showSubmitButton = () => {
        $("#submitButton") //shows submit button from hidden spot in DOM
          .removeClass("d-none");
      };

      hideUpdateButton = () => {
        $("#updateButton").addClass("d-none");
      };

      showUpdateButton = () => {
        $("#updateButton").removeClass("d-none"); //shows update button on DOM
      };

      moveIdToDOM = (id) => {
        $("#updateButtonHiddenId").text(id);
        // console.log(id);
      };

      getIdFromDOM = () => {
        //takes hidden Id from card editted and returns to caller
        var capturedId = $("#updateButtonHiddenId").text();
        // console.log(capturedId);
        return capturedId;
      };

      emptyForms = () => {
        //resets form values
        var data = {};
        data.pluginName = $("#pluginName").val("");
        data.companyName = $("#companyName").val("");
        data.yearReleased = $("#yearReleased").val("");
      };

      function getFormData() {
        var data = {};
        data.pluginName = $("#pluginName").val();
        data.companyName = $("#companyName").val();
        data.yearReleased = $("#yearReleased").val();

        return data;
      }

      function writeFormData(data) {
        $("#pluginName").val(data.pluginName);
        $("#companyName").val(data.companyName);
        $("#yearReleased").val(data.yearReleased);
      }

      getTemplate = () => {
        htmlFromTargetClone = $("#entityTemplate").html();
        var jQuerySelector = $(htmlFromTargetClone);
        var clone = jQuerySelector.clone();
        clone.removeAttr("id");
        return clone;
      };
    </script>
    <!-- 🛑 Do Not Write Any Code Below here -->
  </body>
</html>
