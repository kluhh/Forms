    <nav
      class="do-not-remove navbar navbar-expand-md navbar-dark bg-dark sabio"></nav>

    <div class="container ajax sabio">
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label"
          >Plugin Name</label
        >
        <input
          type="text"
          class="form-control"
          id="pluginName"
          placeholder="ex...1176 Compressor"
          name="pluginName" />
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label"
          >Company Name</label
        >
        <input
          type="text"
          class="form-control"
          id="companyName"
          placeholder="ex...Universal Audio"
          name="companyName" />
      </div>
      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label"
          >Year Released</label
        >
        <input
          type="text"
          class="form-control"
          id="yearReleased"
          placeholder="ex...2022"
          name="year" />
      </div>
      <button
        class="btn btn-primary"
        type="submit"
        id="submitButton"
        name="submitButton">
        Submit
      </button>
      <button
        class="btn btn-warning d-none"
        type="submit"
        id="updateButton"
        name="updateButton">
        Update
      </button>
      <button
        class="btn btn-success"
        type="submit"
        id="renderAllButton"
        name="renderAllButton">
        Render All
      </button>
