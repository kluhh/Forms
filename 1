    <div class="d-none" id="updateButtonHiddenId"></div>

    <div class="clone-container"></div>
    <script id="entityTemplate" type="text/template">
      <div class="row my-3 t-3 card-plugin ">
          <div class="col-md-4 mb-4">
              <div class="card" style="width: 18rem;">
                  <!-- <img src="..." class="card-img-top" alt="..."> -->
                  <div class="card-body">
                    <section class="card-id">
                      <h5 class="card-title">Card title</h5>
                      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                      <p class="card-text-year">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                      <button type="button" class="btn btn-danger deleteButton" >Delete</button>
                      <button type="button" class="btn btn-warning editButton" >Edit</button>
                    </section>



                    </div>
              </div>
          </div>
      </div>
    </script>

    <!-- Do Not Edit or Remove this footer element -->
    <footer
      class="do-not-remove container-fluid footer mx-auto fb-targert sabio">
